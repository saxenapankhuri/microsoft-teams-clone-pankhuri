<!DOCTYPE html>
<html lang="en-US" class="no-js">

<head>
  <title>Team</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script>
    //variables
    const roomsno = < %= roomsno % >
      const roomId = < %= roomId % >
        const messages = < %= messages % >
  </script>
  <link rel='stylesheet' href='assets/css/bootstrap.min.css' type='text/css' media='all' />
  <link rel='stylesheet' href='assets/css/animate.min.css' type='text/css' media='all' />
  <link rel='stylesheet' href='styles.css' type='text/css' media='all' />
  <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans%3A300italic%2C400italic%2C700italic%2C300%2C400%2C700%2C800%7CMontserrat%3A300italic%2C400italic%2C700italic%2C300%2C400%2C700%7CDosis%3A400%2C700&#038;ver=4.5'
    type='text/css' media='all' />
  <link rel='stylesheet' href='icons/elegantline/style.css' type='text/css' media='all' />
  <link rel='stylesheet' href='assets/css/font-awesome.min.css' type='text/css' media='all' />
  <link rel='stylesheet' href='assets/css/flexslider.css' type='text/css' media='all' />
  <script src="teamsPage.js" defer></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js" defer></script>
</head>

<body class="frontpage" style="background-color: #141414;">

  <!--========================HEADER========================== -->
  <header id="header">
    <div id="mega-menu" class="header header2 header-sticky primary-menu icons-no default-skin zoomIn align-right">
      <nav class="navbar navbar-default redq">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="navbar">
            <a class="mobile-menu-close"><i class="fa fa-close"></i></a>
            <div class="menu-top-menu-container">
              <ul id="menu-top-menu" class="nav navbar-nav nav-list">
                <li><a href="/goToTeamsPage">Home</a></li>
                <li><a href="#meeting_link">Meeting Link</a></li>
                <li><a href="#messages">Messages</a></li>
                <li style="background: rgba(255, 255, 0, 0.51);"><a target="_blank" href="/logout">LogOut</a></li>
              </ul>
            </div>
          </div>
          <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
      </nav>
    </div>
  </header>

  <!--========================MEETING LINK BUTTON========================== -->
  <section id="meeting_link" style="padding: 0;background-image: url(https://unsplash.it/1324/683?random=0); background-position: center; background-repeat: no-repeat;background-attachment:fixed; height: 400px;">
    <div class="container">
      <div class="textwidget">
        <h1 class="toptitle"> <br /><br /><i class="fa fa-star roundicon"></i>
        </h1>
        <div class="contactstyle topform">
          <form method="get" action="/room<%=roomId%>">
            <input type="hidden" name="roomId" value="<%=roomId %>">
            <button class="clearfix btn btn-warning btn-block" type="submit">Enter Meeting Room</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!--========================MESSAGES========================== -->
  <section id="messages" style="padding: 8% 20%;">
    <h1 class="toptitle">Messages<br /><br />
    </h1>
    <!-- CHAT HISTORY -->
    <div style="padding:0% 5%; background-color:#f9f9f9  ;height: 300px;overflow-y: auto;">
      <% messages.forEach(function(eachMssg){%>
      <div class="" style="background:#eeeeee ;margin: 1%;">
        <p style="padding:1% 3%;"> <b><%=eachMssg.username%></b><span style="float: right;"><%=eachMssg.time%></span> <br><%=eachMssg.mssg%></p>
      </div>
      <%})%>
    </div>
    <!-- NEW MESSAGE FORM -->
    <div class="" style="background: #eeeeee; width: inherit; padding: 5%;">
      <form method="post" action="/addMessage">
        <input type="hidden" name="roomsno" value="<%=roomsno %>">
        <input type="hidden" name="roomId" value="<%=roomId %>">
        <input type="text" name="mssg" placeholder="Enter new mssg..." style="width: 100%;" required>
        <button class="clearfix btn btn-warning btn-block" type="submit">Send message</button></button>
      </form>
    </div>

  </section>

</body>
